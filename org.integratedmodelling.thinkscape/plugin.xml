<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Thinkscape"
            id="org.integratedmodelling.thinkscape.thinkscape">
      </category>
      <view
            name="Knowledge"
            icon="icons/sample.gif"
            category="org.integratedmodelling.thinkscape.thinkscape"
            class="org.integratedmodelling.thinkscape.views.KnowledgeView"
            id="org.integratedmodelling.thinkscape.views.Knowledge">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.integratedmodelling.thinkscape.views.Knowledge">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
